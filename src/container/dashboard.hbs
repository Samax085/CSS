  <body>    
    <div class="page page--dashboard">
      <div class="page__aside aside vertical vertical--big">
        <div class="text aside__logo">Sidebar</div>
        <nav class="vertical vertical--small">
          <a href="#" class="nav__button nav-button--active click">
            <span class="icon nav-button__icon" style="background-image: url('/svg/nav-dashboard/home.svg');"></span>
            <span class="text text--line text--light">Home</span>
          </a>
          <a href="#" class="nav__button click">
            <span class="icon nav-button__icon" style="background-image: url('/svg/nav-dashboard/orders.svg');"></span>
            <span class="text text--line text--light">Orders</span>
          </a>
          <a href="#" class="nav__button click">
